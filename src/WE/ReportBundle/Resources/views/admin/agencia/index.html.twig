{% extends 'base.html.twig' %}

{% block body %}
    {# AREA BREADCUM/BOTÓN #}
    <div class="col-xs-12 px-0 breadcrumb-c">
        <span>Administración / <strong>Agencia</strong></span>
        <h1>Agencia</h1>
    </div>
    <div class="col-xs-12 px-0 new-btn">
        <a href="{{ path('agencia_new') }}" class="filter-t-add">
            Crear nuevo<span class="glyphicon glyphicon-plus"></span>
        </a>
    </div>
    {# ---- AREA BREADCUM/BOTÓN #}
    {% include 'ReportBundle:admin:layout/filter-top.html.twig' with {'list_filter':'y', 'searchBy':'agencia'} %}
    <div class='table-wrap hidden-xs'>
        <table class="table table-striped table-bordered dt-responsive nowrap admin-list custom-table-list">
            <thead>
                <tr>
                     <th>{{knp_pagination_sortable(pagination,'Nombre','Agencia.nombre')}}</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody>
                {% if pagination|length %}
                    {% for agencia in pagination %}
                        <tr>
                            <td>{{agencia.nombre}}</td>
                            <td><a href="{{ path('agencia_edit', {'id':agencia.id}) }}">
                                    <button class="btn bg-ocean">Editar</button>
                                </a></td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan='6'>
                            <p>NO HAY AGENCIAS</p>
                        </td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
