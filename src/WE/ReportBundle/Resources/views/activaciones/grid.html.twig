{% extends 'base.html.twig' %}

{% block body %}
    <h1>Marcas</h1>
    <div class="row">
        <div class="col-md-4">
            <p>Selecciona tu marca</p>
        </div>
    </div>
    <div class="row">
        {% for entity in entities %}
            <div class="col-md-4">
                <h2>{{ entity.nombre }}</h2>
                <img width="100%" src="{{ vich_uploader_asset(entity, 'imageFile') }}" alt="{{entity.image}}" />
                <p style="margin-top: 10px;" class="text-center"><a class="btn btn-primary" href="{{ path('cambiar_marca', { 'id': entity.id }) }}">Seleccionar</a></p>
            </div>
        {% endfor %}
    </div>
{% endblock %}
