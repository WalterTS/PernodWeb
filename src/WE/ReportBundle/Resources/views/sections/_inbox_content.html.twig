{% if notification %}
    <div class="col-sm-9 mail_view">
        <div class="inbox-body">
            <div class="mail_heading row">
                <div class="col-md-8">
                    {% if notification.path %}
                    <div class="btn-group">
                        <a href="{{notification.path}}" class="btn btn-sm btn-primary" type="button"><i class="fa fa-link"></i> Ver detalles</a>
                    </div>
                    {% endif %}
                </div>
                <div class="col-md-4 text-right">
                    <p class="date">{{ notification.fecha|localizeddate('medium', 'medium', app.request.locale) }}</p>
                </div>
                <div class="col-md-12">
                    <h4>{{notification.titulo}}</h4>
                </div>
            </div>
            <div class="sender-info">
                <div class="row">
                    <div class="col-md-12">
                        <strong>{{notification.sender}}</strong>
                        a
                        <strong>{{notification.userTo.username}}</strong>
                        <a class="sender-dropdown"><i class="fa fa-chevron-down"></i></a>
                    </div>
                </div>
            </div>
            <div class="view-mail">
                {{notification.contenido|raw|nl2br}}
            </div>
                    {% if notification.path %}
            <div class="btn-group">
                <a href="{{notification.path}}" class="btn btn-sm btn-primary" type="button"><i class="fa fa-link"></i> Ver detalles</a>
            </div>
            {% endif %}
        </div>
    </div>
{%endif%}